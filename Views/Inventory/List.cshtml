@model IEnumerable<INV.BO.INV_Inventories>

@{
    Layout = null;
}

<div class="card-header">
    <div class="row">
        <div class="col-md-6">
            <div class="margin">
                <div class="btn-group">
                    <a href="@Url.Action("Add","Inventory")" data-toggle="modal" data-target="#modal-default" id="addNewButton" class="btn btn-success btn-xs"><i class="fas fa-plus-square"></i> Add New</a>
                </div>
                <div class="btn-group">

                    <div class="col-sm-4">
                        @*<select class="form-control form-control-sm" id="personId" asp-items="@(new SelectList(ViewBag.EmployeeList, "PersonId", "FullName"))">
                            <option value="0">---Select Name---</option>
                        </select>*@
                    </div>
                    <div class="col-sm-4">
                        <input type="text" class="form-control form-control-sm float-right" id="fromToDateId">
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="card-body pad">
    <div class="table-responsive">
        <div class="card-body table-responsive p-0">
            <table class="table table-head-fixed text-nowrap  table-bordered table-hover mailbox-messages table-sm" id="userListTable">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Product</th>
                        <th>Rate</th>
                        <th>Qty</th>
                        <th>Total Amount </th>
                        <th>Discount</th>
                        <th>Net Amount</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

    <div class="card-footer">
        <a href="@Url.Action("UserList","Users")" class="btn btn-default float-left">Back to User</a>
        <a href="@Url.Action("Index","Home")" class="btn btn-default float-right">Back to Home</a>
    </div>
</div>


<div class="modal fade" id="modal-default">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">  Entry </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <partial name="Add" />
            </div>
            <div class="modal-footer justify-content-between">
                @*<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>*@
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


<script>
    $(document).ready(function () {
        // When the "Add New" button is clicked
        $("#addNewButton").on("click", function () {
            // Open the modal
            $("#modal-default").modal("show");
        });
    });
 </script>